{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2018",
		"lib": ["esnext", "dom"],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"moduleResolution": "Node",

		"baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
        }
	},
	"include": ["src/**/*", "src/types/**/*.d.ts" ],
	"exclude": ["node_modules", "**/*.spec.ts"]
}